<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  const initOutline = () => {
    const rows = document.querySelectorAll('.outline-row');

    gsap.set(rows, { opacity: 0, y: 10 });

    ScrollTrigger.create({
      trigger: '.outline-table',
      start: 'top 70%',
      onEnter: () => {
        gsap.to(rows, {
          opacity: 1,
          y: 0,
          duration: 0.4,
          stagger: 0.03,
          ease: 'power2.out'
        });
      }
    });
  };

  document.addEventListener('DOMContentLoaded', initOutline);
</script>

<style>
  .outline-row {
    will-change: opacity, transform;
  }

  @media (min-width: 768px) {
    .outline-table .grid {
      display: block;
    }

    .outline-row:nth-child(even) {
      background-color: rgba(20, 20, 26, 0.3);
    }
  }
</style>
