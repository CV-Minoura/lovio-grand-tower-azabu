<div id="loading" class="loading">
  <p class="loading-text">LIVIO GRAND TOWER</p>
</div>

<script>
  // Instant loading-complete for hero to start immediately
  document.body.classList.add('loading-complete');

  // Remove loading screen after brief CSS animation
  const loading = document.getElementById('loading');
  if (loading) {
    loading.addEventListener('animationend', () => {
      loading.style.display = 'none';
    });
  }
</script>

<style>
  .loading {
    position: fixed;
    inset: 0;
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #0A0A0F;
    animation: loadingFade 0.3s ease-out forwards;
  }

  .loading-text {
    font-family: "Cormorant Garamond", "Hiragino Mincho ProN", serif;
    font-size: 0.875rem;
    letter-spacing: 0.3em;
    color: #C9A96E;
    animation: textPulse 0.4s ease-out;
  }

  @keyframes loadingFade {
    to {
      opacity: 0;
      visibility: hidden;
    }
  }

  @keyframes textPulse {
    0% { opacity: 0; }
    50% { opacity: 1; }
    100% { opacity: 0; }
  }

  @media (prefers-reduced-motion: reduce) {
    .loading {
      animation: none;
      display: none;
    }
  }
</style>
