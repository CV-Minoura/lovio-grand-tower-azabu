            <p class="text-xs text-text-secondary">徒歩12分（約960m）</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  const initLifeInfo = () => {
    const filterBtns = document.querySelectorAll('.filter-btn');
    const items = document.querySelectorAll('.life-item');
    const featuredItems = document.querySelectorAll('.life-featured-item');

    // Category filter
    filterBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const category = btn.getAttribute('data-category');

        // Update active state
        filterBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');

        // Filter list items
        items.forEach(item => {
          const itemCategory = item.getAttribute('data-category');

          if (category === 'all' || itemCategory === category) {
            gsap.to(item, { opacity: 1, scale: 1, duration: 0.3, display: 'block' });
          } else {
            gsap.to(item, {
              opacity: 0,
              scale: 0.95,
              duration: 0.3,
              onComplete: () => {
                (item as HTMLElement).style.display = 'none';
              }
            });
          }
        });

        // Filter featured items
        featuredItems.forEach(item => {
          const itemCategory = item.getAttribute('data-category');

          if (category === 'all' || itemCategory === category) {
            gsap.to(item, { opacity: 1, scale: 1, duration: 0.4, display: 'block' });
          } else {
            gsap.to(item, {
              opacity: 0,
              scale: 0.95,
              duration: 0.3,
              onComplete: () => {
                (item as HTMLElement).style.display = 'none';
              }
            });
          }
        });
      });
    });

    // Scroll animation for featured items
    ScrollTrigger.create({
      trigger: '.life-featured-item',
      start: 'top 80%',
      onEnter: () => {
        gsap.to(featuredItems, {
          opacity: 1,
          y: 0,
          duration: 0.6,
          stagger: 0.1,
          ease: 'power2.out'
        });
      }
    });

    // Scroll animation for list items
    ScrollTrigger.create({
      trigger: '.life-list',
      start: 'top 80%',
      onEnter: () => {
        gsap.to(items, {
          opacity: 1,
          y: 0,
          duration: 0.5,
          stagger: 0.05,
          ease: 'power2.out'
        });
      }
    });

    // Set initial state
    gsap.set(featuredItems, { opacity: 0, y: 30 });
    gsap.set(items, { opacity: 0, y: 20 });
  };

  document.addEventListener('DOMContentLoaded', initLifeInfo);
</script>

