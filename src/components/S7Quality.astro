<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  const initQuality = () => {
    const items = document.querySelectorAll('.quality-item');

    ScrollTrigger.create({
      trigger: '#quality',
      start: 'top 60%',
      onEnter: () => {
        gsap.to(items, {
          opacity: 1,
          y: 0,
          duration: 0.5,
          stagger: 0.08,
          ease: 'power2.out'
        });
      }
    });

    // Hover effect
    items.forEach(item => {
      const icon = item.querySelector('.quality-icon');

      item.addEventListener('mouseenter', () => {
        gsap.to(icon, { scale: 1.1, duration: 0.3, ease: 'power2.out' });
      });

      item.addEventListener('mouseleave', () => {
        gsap.to(icon, { scale: 1, duration: 0.3, ease: 'power2.out' });
      });
    });
  };

  document.addEventListener('DOMContentLoaded', initQuality);
</script>

<style>
  .quality-grid {
    scrollbar-width: none;
    -webkit-overflow-scrolling: touch;
  }

  .quality-grid::-webkit-scrollbar {
    display: none;
  }

  .quality-item {
    will-change: transform, opacity;
  }

  .quality-icon {
    will-change: transform;
  }

  @media (max-width: 767px) {
    .quality-item {
      min-width: 140px;
    }
  }

  @keyframes bounce-x {
    0%, 100% { transform: translateX(0); }
    50% { transform: translateX(6px); }
  }

  .animate-bounce-x {
    animation: bounce-x 1.5s ease-in-out infinite;
  }
</style>
